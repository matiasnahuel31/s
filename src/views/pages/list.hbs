<h1>Products</h1>
{{#if productos.[0]}}
    <table>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Price</th>
            <th>Thumbnail</th>
        </tr>
        {{#each productos}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.nombre}}</td>
                <td>{{this.precio}}</td>
                <td><img src={{this.foto}} alt="" width="50px" height="50px"></td>
            </tr>
        {{/each}}
    </table>
    {{else}}
    <p> No hay productos en la lista </p>
{{/if}}